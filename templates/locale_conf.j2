{{ '## locale.conf' }}
{{ '# ' + ansible_managed }}
{{ '# Do not edit manually' }}

{% for l in vars['linux_helper_locale_settings']['locales'] %}
{% if (l['locale'] is defined and l['locale'] != '') and (l['charset'] is
  defined and l['charset'] != '') %}
{{ 'LANG=\"' + l['locale'] + '.' + l['charset'] + '\"' }}
{% endif %}
{% endfor %}
